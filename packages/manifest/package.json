{
  "name": "@acfs/manifest",
  "version": "0.1.0",
  "description": "Parser and utilities for ACFS manifest files",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist",
    "generate": "bun run src/generate.ts",
    "generate:dry": "bun run src/generate.ts --dry-run --verbose"
  },
  "dependencies": {
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
